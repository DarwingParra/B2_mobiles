<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/background"


    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="40dp"
        android:layout_marginBottom="-20dp"
        android:alpha="0.8"

        >
        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="365dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|bottom"
            android:paddingLeft="30dp"
            >

            <Button
                android:id="@+id/button_Get_into"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-30dp"
                android:layout_marginBottom="-1dp"
                android:text="Ingresar"

                />

            <Button
                android:id="@+id/button_Register"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="-1dp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView2"
                android:layout_width="270dp"
                android:layout_height="255dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="-270dp"
                android:layout_marginBottom="40dp"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:srcCompat="@drawable/chef_1"
                app:strokeWidth="3dp"
                app:strokeColor="@color/black"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/text_Email_Into"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:alpha="0.6"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textWebEmailAddress"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/icon_check"
                android:hint="example@.com"
                android:textColorHint="@color/white"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>

            <TextView
                android:id="@+id/text_password_Into"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:alpha="0.6"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/remove"
                android:backgroundTint="@color/white"
                android:textColorHint="@color/white"
                android:hint="*********"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>


            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Registrar"
                app:cornerRadius="32dp"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingresar con"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:alpha="0.7"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/facebook"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/gmail"
                    />


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>